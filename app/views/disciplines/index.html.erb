<p id="notice"><%= notice %></p>

<h1>Disciplines</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Codigo</th>
      <th>Sigla</th>
      <th>Cargahoraria</th>
      <th>Periodo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.descricao %></td>
        <td><%= discipline.codigo %></td>
        <td><%= discipline.sigla %></td>
        <td><%= discipline.cargaHoraria %></td>
        <td><%= discipline.periodo %></td>
        <td><%= link_to 'Show', discipline %></td>
        <% if current_user.person.perfil == Person.perfils.key(0) %>
          <td><%= link_to 'Edit', edit_discipline_path(discipline) %></td>
          <td><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.person.perfil == Person.perfils.key(0) %>
  <%= link_to 'New Discipline', new_discipline_path %>
<%end%>

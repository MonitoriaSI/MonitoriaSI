<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= link_to 'Agendar monitoria ', new_event_path %>

<table>
  <thead>
    <tr>
      <th>Turma</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Local</th>
      <th>Monitor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @events.each do |event| %>
      <tr>
        <td><%= event.team %></td>
        <td><%= event.inicio %></td>
        <td><%= event.fim %></td>
        <td><%= event.local %></td>
        <td><%= event.team.monitor %></td>
        
        <td><%= link_to 'Show', event %></td>
        <% if current_user.person == event.team.monitor %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= " Total de horas de monitoria: #{@cont} " %>
<br>
